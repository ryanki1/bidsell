div.quote-box-page
  div.bidsell.box(id="quoteBox")
    div.header.box(layout)
      div.currency-pair.cp(flex="45" layout layout-align="center center")
        md-select.currency-pair(flex ng-model="currencyPairSelection" ng-class="{'mid-price-up': qBox.direction === 1, 'mid-price-down': qBox.direction === -1, 'mid-price-holds': qBox.direction === 0}")
          md-option(ng-repeat='currencyPair in currencyPairs' value='{{currencyPair}}').
            {{currencyPair}}
        md-tooltip(md-direction="bottom").
          Currency pair
      div.trend-pointer(flex="5" layout layout-align="center center")
        md-icon.material-icons.md-24.mid-price-up(flex ng-if="qBox.direction === 1" md-svg-icon="./bower_components/material-design-icons/action/svg/design/ic_trending_up_24px.svg")
        md-icon.material-icons.md-24.mid-price-holds(flex ng-if="qBox.direction === 0" md-svg-icon="./bower_components/material-design-icons/action/svg/design/ic_trending_flat_24px.svg")
        md-icon.material-icons.md-24.mid-price-down(flex ng-if="qBox.direction === -1" md-svg-icon="./bower_components/material-design-icons/action/svg/design/ic_trending_down_24px.svg")
        md-tooltip(ng-if="qBox.direction === 1" md-direction="bottom").
          Average-mid-price up
        md-tooltip(ng-if="qBox.direction === 0" md-direction="bottom").
          Average-mid-price holds
        md-tooltip(ng-if="qBox.direction === -1" md-direction="bottom").
          Average-mid-price down
      div.badge-time(flex="50" layout layout-align="center center")
        div.badge.cp(flex="10" layout layout-align="center center")
          md-icon.badge.material-icons.md-18(flex md-svg-icon="./bower_components/material-design-icons/image/svg/design/ic_looks_one_24px.svg")
          md-tooltip(md-direction="bottom").
            Trading group
        div(flex layout layout-align="center center")
          span.time
            time.
              {{qBox['quote-date-time']}}
        div.x.cp(flex="10" layout layout-align="center center")
          md-icon.material-icons.md-18(flex md-svg-icon='./bower_components/material-design-icons/navigation/svg/design/ic_close_24px.svg')
          md-tooltip(md-direction="bottom").
            Close
    div.upper-body(layout)
      div(flex="10")
      div.min-price.cp(flex="10" layout layout-align="center center")
        span(flex).
          {{qBox['price-min-string'].substr(0,3)}}<b>{{qBox['price-min-string'].substr(3,3)}}</b>{{qBox['price-min-string'].substr(6,1)}}
        md-tooltip(md-direction="bottom").
          Minimum Price
      div(flex)
      div.max-price.cp(flex="10" layout layout-align="center center")
        span(flex).
          {{qBox['price-max-string'].substr(0,3)}}<b>{{qBox['price-max-string'].substr(3,3)}}</b>{{qBox['price-max-string'].substr(6,1)}}
        md-tooltip(md-direction="bottom").
          Maximum Price
      div(flex="20")
    div.lower-body
      div.sliders
        div.slider-ask.cp(layout)
          div(flex="10" layout layout-align="center center")
            span.label(flex).
              Ask
          md-slider(flex ng-model="qBox['ask-start']" ng-disabled="true" min="0" max="{{qBox['price-range']}}" aria-label="ask" id="slider.ask" class="md-slider-ask")
          div(flex="10" layout layout-align="center center")
            input.cp(flex ng-disabled="true" ng-model="qBox['ask-string']" aria-label="ask" aria-controls="slider.ask")
          div(flex="10" layout layout-align="center center")
            span.label
              small.
                pips
          md-tooltip(md-direction="top" md-visible="pipShowing")
            span(ng-bind-html="getAskPrice()")
        div.current-spread.cp(layout)
          div(flex layout layout-align="end center")
            input.current-spread-value.cp(flex="10" ng-disabled="true" aria-label="Current spread" ng-model="qBox['current-spread-string']")
            span(flex="10")
            md-tooltip(md-direction="top").
              Current spread
        div.slider-sell.cp(layout)
          div(flex="10" layout layout-align="center center")
            span.label(flex).
              Sell
          md-slider(flex ng-model="qBox['sell-start']" ng-disabled="true" min="0" max="{{qBox['price-range']}}" aria-label="sell" id="slider.sell" class="md-slider-sell")
          div(flex="10" layout layout-align="center center")
            input.cp(flex ng-disabled="true" ng-model="qBox['sell-string']" aria-label="sell" aria-controls="slider.sell")
          div(flex="10" layout layout-align="center center")
            span.label
              small.
                pips
          md-tooltip(md-direction="top")
            span(ng-bind-html="getSellingPrice()")
        div.trading-size(layout layout-align="center center")
          div(flex="20" layout layout-align="center center")
            input.cp(flex ng-disabled="true" ng-model="qBox['trading-size-string']" aria-label="Trading size" class="trading-size-input")
            md-tooltip(md-direction="top").
              Trading size
  div.button-actions(layout)
    div.price-generator(flex="50" layout layout-align="start center")
      md-button.md-primary(flex ng-click="triggerIgnition(ignitionInterval)").
        Price ignition
    div(flex="50" layout layout-align="center center")
      span(flex).
        every
      input(flex type="number" ng-model="ignitionInterval" aria-label="Quotebox Interval" aria-controls="quoteBox")
      span(flex).
        &nbsp;sec